<script>
document.addEventListener("DOMContentLoaded", function () {
  const footerText = document.getElementById("footer-desc");

  // 매칭 규칙
  const colorMap = {
    "img-fill-text-1": "#ffffff",
    "img-fill-text-2": "#217538",
    "img-fill-text-3": "#E2103B",
    "img-fill-text-4": "#38A3A1"
  };

  // 메뉴 hover 트리거
  const items = document.querySelectorAll(".img-fill-text");

  items.forEach(item => {
    const classList = item.classList;
    item.addEventListener("mouseenter", () => {
      for (const key in colorMap) {
        if (classList.contains(key)) {
          footerText.style.color = colorMap[key];
        }
      }
    });
    // hover를 해제하면 기본색(#fff)으로 돌아감
    item.addEventListener("mouseleave", () => {
      footerText.style.color = "#ffffff";
    });
  });
});
</script>
