var markers = [];
var infoWindows = [];
var listElement = document.getElementById('location-list');

AREA_ARR.forEach(function(area, index) {
    if (area.lat === 0 || area.lng === 0) return;

    var marker = new naver.maps.Marker({
        map: map,
        position: new naver.maps.LatLng(area.lat, area.lng),
        title: area.title,
        icon: {
            url: 'https://cdn.imweb.me/upload/S20251125ef9663fb703e9/603a812712577.png',
            size: new naver.maps.Size(50, 52),
            scaledSize: new naver.maps.Size(40, 42),
            origin: new naver.maps.Point(0, 0),
            anchor: new naver.maps.Point(25, 26)
        }
    });

    var infoWindow = new naver.maps.InfoWindow({
        content: area.content,
        backgroundColor: "#fff",
        borderColor: "#333",
        borderWidth: 1,
        anchorSize: new naver.maps.Size(10, 10),
        pixelOffset: new naver.maps.Point(0, -10)
    });

    markers.push(marker);
    infoWindows.push(infoWindow);

    var li = document.createElement('li');
    li.className = 'location-item';
    li.innerHTML = area.title;
    li.setAttribute('data-index', index);

    li.onclick = function() {
        document.querySelectorAll('.location-item').forEach(function(item) { item.classList.remove('active'); });
        this.classList.add('active');
        map.panTo(new naver.maps.LatLng(area.lat, area.lng));
        infoWindows.forEach(function(iw) { iw.close(); });
        infoWindow.open(map, marker);
    };

    listElement.appendChild(li);

    naver.maps.Event.addListener(marker, 'click', function() {
        document.querySelectorAll('.location-item').forEach(function(item) { item.classList.remove('active'); });
        document.querySelector('[data-index="' + index + '"]').classList.add('active');
        infoWindows.forEach(function(iw) { iw.close(); });
        infoWindow.open(map, marker);
    });
});
</script>
