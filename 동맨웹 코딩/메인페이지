<script>
window.addEventListener("load", () => {
  const overlay = document.createElement("div");
  overlay.className = "intro-overlay";

  document.body.appendChild(overlay);
  
  requestAnimationFrame(() => {
    overlay.classList.add("animate");
  });

  setTimeout(() => {
    overlay.remove();
  }, 800);
});
</script>

<style>
/* 인트로 오버레이 스타일 */
.intro-overlay {
  position: fixed;
  inset: 0;
  background: #ffffff;
  z-index: 99999;
  clip-path: circle(150% at 100% 50%);
  -webkit-clip-path: circle(150% at 100% 50%);
  will-change: clip-path;
}
.intro-overlay.animate {
  animation: circleReveal 5.5s cubic-bezier(0.22, 1.1, 0.32, 1) forwards;
}
@keyframes circleReveal {
  0% { clip-path: circle(160% at 100% 50%); }
  40% { clip-path: circle(0% at 100% 50%); }
  60% { clip-path: circle(14% at 100% 50%); }
